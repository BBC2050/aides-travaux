{
  "$id": "https://github.com/BBC2050/core/schemas/variable",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Variable",
  "description": "Une variable d'entrée utilisée pour le calcul des aides travaux",
  "type": "object",
  "properties": {
    "categorie": {
      "title": "Catégorie",
      "label": "Catégorie",
      "description": "Catégorie de la variable",
      "type": "string",
      "enum": ["Bâtiment", "Foyer", "Action"]
    },
    "nom": {
      "title": "Nom",
      "label": "Nom",
      "description": "Nom de la variable",
      "type": "string",
      "maxLength": 240
    },
    "description": {
      "title": "Description",
      "label": "Description",
      "description": "Description de la variable",
      "type": "string",
      "maxLength": 240      
    }
  },
  "required": [
    "categorie",
    "nom",
    "description"
  ]
}
